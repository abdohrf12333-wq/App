#!/bin/sh

# 1. عرض الملفات والمجلدات بشكل منظم
echo "==============================="
echo "   [ مستكشف ملفات MyTunnel ]"
echo "==============================="
echo "المسار الحالي: /sdcard/"
echo "-------------------------------"

# عرض المجلدات والملفات مع أرقام لتسهيل الاختيار
ls -F /sdcard/

echo "-------------------------------"
echo "الأوامر المتاحة:"
echo "1. لمسح ملف: اكتب (rm) ثم اسم الملف"
echo "2. لفتح مجلد: اكتب (ls) ثم اسم المجلد"
echo "3. لقراءة ملف: اكتب (cat) ثم اسم الملف"
echo "==============================="
